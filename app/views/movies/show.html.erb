<%= render "shared/navbar" %>

    <div class="movie-card-show">
      <div class="d-flex justify-content-between">
          <div class="movie-show-image">
            <%= cl_image_tag @movie.photo.key if @movie.photo.attached? %>
           </div>
        <div class="movie-details ml-4">
          <p class="movie-title-show"><%= @movie.title%></p>
            <p><%= @movie.release_date.strftime("%d %b %Y")%> </p>
            <p> <%= @movie.duration%> min </p>
          <div class="details-row25 d-flex justify-content-between">
            <p class="market-rating align-text-bottom"><i class="fa-solid fa-star"></i><span class="d-block ml-2"><%= @movie.rating_for_user(current_user)%></span></p>
            <p class="genre-tag text-center <%=@movie.genre.downcase%>"><%=@movie.genre%></p>
          </div>
        </div>
      </div>
    </div>


  <ul class="nav nav-tabs text-white d-flex align-content-stretch" id="myTab" role="tablist">
    <li class="nav-item" role="presentation">
      <button class="nav-link active home-title" id="map-tab" data-bs-toggle="tab" data-bs-target="#map" type="button" role="tab" aria-controls="map" aria-selected="true"><i class="fa-solid fa-map"></i></button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link home-title" id="synopsis-tab" data-bs-toggle="tab" data-bs-target="#synospis" type="button" role="tab" aria-controls="synospis" aria-selected="false"><i class="fa-solid fa-book"></i></i></button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link home-title" id="reviews-tab" data-bs-toggle="tab" data-bs-target="#reviews" type="button" role="tab" aria-controls="reviews" aria-selected="false"><i class="fa-solid fa-star"></i></button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link home-title" id="sharings-tab" data-bs-toggle="tab" data-bs-target="#sharings" type="button" role="tab" aria-controls="sharings" aria-selected="true"><i class="fa-solid fa-share-nodes"></i></button>
    </li>
  </ul>
  <div class="tab-content text-white" id="myTabContent">
    <div class="tab-pane fade show active" id="map" role="tabpanel" aria-labelledby="map-tab">
      <div style="width: 100%; height: 440px;"
        data-controller="map"
        data-map-markers-value="<%= @markers.to_json %>"
        data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
    <div class="tab-pane fade m-4 text-justify" id="synospis" role="tabpanel" aria-labelledby="synospis-tab">
      <%= @movie.synopsis %>
    </div>
    <div class="tab-pane fade m-2" id="reviews" role="tabpanel" aria-labelledby="reviews-tab">
      <div class= "d-flex justify-content-center">
        <h2> <%= pluralize(@movie.reviews.count, "note", "notes") %> - <%= @movie.rating_for_movie %> de moyenne <h2>
      </div>
      <% @reviews.each do |review| %>
        <div class="card-reviews" >
            <div class= "d-flex flex-row">
              <%= cl_image_tag review.user.avatar.key, witdh: 30, height: 30, class:"rounded-circle" %>
              <h4 class = "title p-1">@<%= review.user.first_name %></h4>
            </div>
            <div class = "d-flex flex-column">
              <p><strong>Sa note</strong> : <%= review.rating %></p>
              <p><strong>Son avis</strong> : "<%= review.comment%>"</p>
            </div>
        </div>
      <% end %>
    </div>
    <div class="tab-pane fade" id="sharings" role="tabpanel" aria-labelledby="sharings-tab">
      <%@movie.sharings_of_followed_users(current_user).each do |sharing| %>
       <%= render "sharings/sharing_card", sharing: sharing%>
      <% end %>
    </div>
  </div>

<%= render "pages/footbar" %>

<!-- Modal -->
<% @cinemas.each do |cinema| %>
  <% sessions = Session.where(cinema: cinema, movie: @movie).where("start_at > ?", Time.now.beginning_of_day).where("start_at < ?", Time.now.end_of_day) %>
  <div class="modal fade" id="cinema-<%= cinema.id %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content modal-content-map">
        <%= render "movies/info_window", cinema: cinema, movie: @movie, sessions: sessions, sharing: Sharing.new %>
      </div>
    </div>
  </div>
<% end %>
