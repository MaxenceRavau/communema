<div class="container-info-window">

  <div class = "d-flex flex-column border-bottom">
    <h4 class = "text-center title-color"><%= cinema.name.titleize %></h4>
    <p class = "text-center location-info-window"><%= cinema.location.titleize %></p>
  </div>

  <div class = "text-start mt-2 mb-2 border-bottom">
    <p> Choisissez une date </p>
    <p><%= Date.today.strftime("%d %B %y")%></p>
  </div>

  <div class = "mt-2 mb-2 text-white">

      <%= simple_form_for(sharing) do |f| %>
      <%= f.association :session,
              as: :radio_buttons,
              label: "Choisissez une sÃ©ance",
              collection_wrapper_tag: 'div',
              collection_wrapper_class: 'session-wrapper',
              item_wrapper_class: 'session-item',
              input_html: {class: 'session-selector'},
              collection: sessions %>
      <%= f.input :description, label: "Motivez vos amis", placeholder: "Qui est chaud ? Les popcorns, c'est pour moi" %>
      <%= f.submit "Partager avec vos amis", class: 'btn-red-red'  %>
    <% end %>
  </div>

</div>
