<div class="container chatroom sharing-chatroom"
  data-controller="sharing-subscription"
  data-sharing-subscription-sharing-id-value="<%= @sharing.id %>"
  data-sharing-subscription-current-user-id-value="<%= current_user.id %>">

<div class="container">
  <div class="d-flex align-items-center justify-content-between">
    <%= link_to :back do %>
    <i class="fa-solid fa-arrow-left"></i>
    <% end %>
    <h2><img class="avatar" src="https://images.unsplash.com/photo-1599566150163-29194dcaad36?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=387&q=80" alt="profil">
    <%= @sharing.user.first_name %> : <%= @sharing.description %> </h2>
  </div>
  <h3> <%= @sharing.session.movie.title %></h3>
  <p><%= @sharing.session.cinema.name %>, <%= @sharing.session.cinema.location  %> </p>
  <p> <%= @sharing.session.start_at.strftime("%A %d %B Ã  %Hh%M") %></p>

</div>

  <div class="messages" data-sharing-subscription-target="messages">
    <% @sharing.messages.each do |message| %>
      <div class="message-row d-flex <%= message.sender?(current_user) ? 'justify-content-end' : 'justify-content-start' %>">
        <div class="<%= message.sender?(current_user) ? 'sender-style' : 'receiver-style' %>">
          <%= render "messages/message", message: message %>
        </div>
      </div>
    <% end %>
  </div>

  <%= simple_form_for [@sharing, @message], html: { data: { action: "turbo:submit-end->sharing-subscription#resetForm" }, class: "d-flex" } do |f| %>

    <%= f.input :content,
      label: false,
      placeholder: "Hello there",
      wrapper_html: {class: "flex-grow-1"}
    %>
    <%= f.submit "Send", class: "btn btn-primary mb-3" %>
  <% end %>
</div>
