      <div class="sharing-card" data-controller="sharing-card" data-sharing-card-path-value="<%= sharing_attendees_path(sharing) %>">
        <div class="d-flex mb-4">
            <div class="sharing-image">
              <%= cl_image_tag sharing.movie.photo.key, class: "movie-img" if sharing.movie.photo.attached? %>

            </div>
            <div class="d-flex flex-column ps-4 sharing-infos">
              <%= link_to sharings_path do %>
              <i class="fa-regular fa-circle-xmark round-cross"></i>
              <% end  %>
              <h4 class="title mb-2">@<%= sharing.user.first_name %></h4>
              <p> a prévu d'aller voir <strong><%= sharing.movie.title%></strong> demain à <%= sharing.session.start_at.strftime("%H:%M") %> au <strong><%= sharing.session.cinema.name %></strong> (<i><%= sharing.session.cinema.location %></i>) </p>

              <% unless current_page?(sharing_path(sharing)) %>
                <div class="align-items-center d-flex justify-content-between mt-2 sharing-icon">
                  <%# <p class="align-items-center d-flex"> <i class="fa-regular fa-heart"></i> <span class="ms-2">12</span> </p> %>
                  <p class="align-items-center d-flex font-size-user">
                      <%= link_to sharing_path(sharing) do  %>
                        <i class="fa-regular fa-comment font-size-user"></i>
                      <% end %>
                       <span class="ms-2"></span> <%= sharing.messages.count %>
                  </p>
                <div class="d-flex">
                  <% sharing.users.each do |user| %>
                    <%= cl_image_tag user.avatar.key, width:30, height: 30, class: "d-inline rounded-circle" %>
                  <% end %>
                </div>

                  <%# <p class="align-items-center d-flex"> <i class="fa-solid fa-share"></i> <span class="ms-2">0</span> </p> %>
            </div>


              <% end %>
            </div>
        </div>

          <p class="comment">Message de <%= sharing.user.first_name %> : "<%= sharing.description%>"</p>

        <div class="align-items-center d-flex justify-content-between">
          <% unless sharing.users.include?(current_user) %>
            <%= link_to "Participer", sharing_attendees_path(sharing), data_turbo_method: :post, data: { action: 'click->sharing-card#join'}, class: "btn-participer" %>
          <% end %>
        </div>

          <%= render "reviews/modal", movie: sharing.movie, review: Review.new, modal_id: sharing.session_id %>
      </div>
