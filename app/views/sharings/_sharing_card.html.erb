      <div class="sharing-card" data-controller="sharing-card" data-sharing-card-path-value="<%= sharing_attendees_path(sharing) %>">
        <div class="d-flex mb-4">
            <div class="sharing-image">
              <%= cl_image_tag sharing.movie.photo.key, class: "movie-img" if sharing.movie.photo.attached? %>
              <img class="avatar" src="https://ca.slack-edge.com/T02NE0241-U0HL5H10T-1e791b124c6f-512" alt="profil">
            </div>
            <div class="d-flex flex-column justify-content-between ps-4 sharing-infos">
              <h4 class="title">@<%= sharing.user.first_name %></h4>
              <p> a pr√©vu d'aller voir <strong><%= sharing.movie.title%></strong> demain <%= sharing.session.start_at.strftime("%H:%M") %> au <strong><%= sharing.session.cinema.name %></strong> </p>

              <% unless current_page?(sharing_path(sharing)) %>
                <div class="align-items-center d-flex justify-content-between mt-2 sharing-icon">
                  <%# <p class="align-items-center d-flex"> <i class="fa-regular fa-heart"></i> <span class="ms-2">12</span> </p> %>
                  <p class="align-items-center d-flex">
                      <%= link_to sharing_path(sharing) do  %>
                        <i class="fa-regular fa-comment"></i>
                      <% end %>
                      <span class="ms-2"></span> <%= sharing.messages.count %></p>
                      <p><%= sharing.users.pluck(:first_name).join(', ') %></p>
                  <%# <p class="align-items-center d-flex"> <i class="fa-solid fa-share"></i> <span class="ms-2">0</span> </p> %>
                </div>


              <% end %>
            </div>
        </div>

          <p class="comment">"<%= sharing.description%>"</p>

        <div class="align-items-center d-flex justify-content-between">
          <button type="button" class="btn-red" data-bs-toggle="modal" data-bs-target="#new_review_modal">
          Add a review
          </button>
          <% unless sharing.users.include?(current_user) %>
            <%= link_to "join", sharing_attendees_path(sharing), data_turbo_method: :post, data: { action: 'click->sharing-card#join'}, class: "btn btn-blue" %>
          <% end %>
        </div>

          <%= render "reviews/modal", movie: sharing.movie, review: @review %>
      </div>
