    <div class="modal-content modal-content-rating">
      <div class="modal-header">
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
        </button>
      </div>

      <%= simple_form_for [movie, review] do |f| %>
        <div class="modal-body">
          <%= f.input :comment, placeholder: "Raconter votre expÃ©rience" %>
          <%= f.input :rating, collection: (1..5).to_a, label: "", input_html: {data: {controller: "star-rating"}} %>
        </div>
        <div class="modal-footer">
          <%= f.submit "Ajouter", class: "btn btn-modal" %>
          <%# <button type="button" class="btn btn-cancel" data-bs-dismiss="modal">Back</button> %>
