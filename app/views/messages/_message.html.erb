<div class="message d-flex text-white <%= message.sender?(current_user) ? 'flex-row-reverse justify-content-end' : 'justify-content-start' %>">
  <%= cl_image_tag message.user.avatar.key, width:40, height: 40, class: "d-inline rounded-circle" %>
  <div class="message-content" id="message-<%= message.id %>">
    <small>
      <strong><%= message.user.first_name %></strong>
      <i><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i>
    </small>
    <p><%= message.content %></p>
  </div>
</div>
